
@{
    ViewData["Title"] = "Dependencia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-second-primary">
        <h6 class="m-0 font-weight-bold text-white">Datos de la Dependencia Policial</h6>
    </div>

    <div class="card-body">
        <form id="formDependencia">

            <!-- Fila 1: Nombre y Correo -->
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="txtRazonSocial">Nombre de la Dependencia Policial</label>
                    <input type="text" class="form-control form-control-sm input-validar" 
                           id="txtRazonSocial" name="RazonSocial" placeholder="Ingrese el nombre">
                </div>
                <div class="form-group col-md-6">
                    <label for="txtCorreo">Correo</label>
                    <input type="email" class="form-control form-control-sm input-validar" 
                           id="txtCorreo" name="Correo" placeholder="correo@ejemplo.com">
                </div>
            </div>

            <!-- Fila 2: Dirección y Teléfono -->
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="txtDireccion">Dirección</label>
                    <input type="text" class="form-control form-control-sm input-validar" 
                           id="txtDireccion" name="Direccion" placeholder="Ingrese dirección">
                </div>
                <div class="form-group col-md-6">
                    <label for="txtTelefono">Teléfono</label>
                    <input type="text" class="form-control form-control-sm input-validar" 
                           id="txtTelefono" name="Telefono" placeholder="Ej: 011-1234-5678">
                </div>
            </div>

            <!-- Fila 3: Botón -->
            <div class="form-row mt-3">
                <div class="col text-center">
                    <button class="btn btn-success btn-sm px-4" type="button" id="btnGuardarCambios">
                        <i class="fas fa-save"></i> Guardar Cambios
                    </button>
                </div>
            </div>

        </form>
    </div>
</div>


