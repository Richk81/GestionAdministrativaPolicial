
@{
    ViewData["Title"] = "DashBoard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
    </div>

    <!-- FILA 1: Indicadores principales -->
    <div class="row">
        <!-- Personal -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total de Personal</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalPersonal">150</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-shield fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Chalecos -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Total de Chalecos</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalChalecos">85</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-vest fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Escopetas -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Total de Escopetas</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalEscopetas">35</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-crosshairs fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Radios -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Total de Radios</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalRadios">60</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-broadcast-tower fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Vehículos -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-dark shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-dark text-uppercase mb-1">Total de Vehículos</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalVehiculos">20</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-car fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- FILA 2: Gráficos -->
    <div class="row">
        <!-- Altas y Bajas -->
        <div class="col-xl-8 col-lg-7">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-second-primary">
                    <h6 class="m-0 font-weight-bold text-white">Altas y Bajas del Último Mes</h6>
                </div>
                <div class="card-body">
                    <div class="chart-area" style="height: 350px !important;">
                        <canvas id="chartAltasBajas"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Distribución de Recursos -->
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-second-primary">
                    <h6 class="m-0 font-weight-bold text-white">Distribución de Recursos</h6>
                </div>
                <div class="card-body">
                    <div class="chart-pie" style="height: 350px !important;">
                        <canvas id="chartRecursos"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {

    <script src="~/vendor/chart.js/Chart.min.js"></script>

    <!-- SOLO ES DE EJEMPLO - IGNORAR -->
    <script src="~/js/vistas/chart-bar-demo.js"></script>
    <script src="~/js/vistas/chart-pie-demo.js"></script>
}


